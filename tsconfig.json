{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "steps/**/*.ts",
    "pages/**/*.ts",
    "features/**/*.ts",
    "support/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}